<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="bg-white shadow rounded-lg">
      <div class="px-6 py-8">
        <h1 class="text-2xl font-bold text-gray-900 mb-2">Create Organization</h1>
        <p class="text-gray-600 mb-8">
          Set up a new organization for your team to collaborate.
        </p>

        <.form for={to_form(@changeset)} action="/tenants" method="post" class="space-y-6">
          <div>
            <label for="tenant_name" class="block text-sm font-medium text-gray-700">
              Organization Name
            </label>
            <input
              id="tenant_name"
              name="tenant[name]"
              type="text"
              value={Phoenix.HTML.Form.input_value(to_form(@changeset), :name)}
              required
              class={"mt-1 block w-full px-3 py-2 border rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm #{if @changeset.errors[:name], do: "border-red-300", else: "border-gray-300"}"}
              placeholder="Acme Corporation"
            />
            <%= case @changeset.errors[:name] do %>
              <% nil -> %>
              <% [] -> %>
              <% errors when is_list(errors) -> %>
                <%= for {msg, _opts} <- errors do %>
                  <p class="mt-1 text-sm text-red-600"><%= msg %></p>
                <% end %>
              <% error -> %>
                <p class="mt-1 text-sm text-red-600"><%= elem(error, 0) %></p>
            <% end %>
          </div>

          <div>
            <label for="tenant_slug" class="block text-sm font-medium text-gray-700">
              URL Slug
            </label>
            <div class="mt-1 flex rounded-md shadow-sm">
              <span class="inline-flex items-center px-3 rounded-l-md border border-r-0 border-gray-300 bg-gray-50 text-gray-500 text-sm">
                chat.app/
              </span>
              <input
                id="tenant_slug"
                name="tenant[slug]"
                type="text"
                value={Phoenix.HTML.Form.input_value(to_form(@changeset), :slug)}
                required
                class={"flex-1 block w-full px-3 py-2 rounded-none rounded-r-md border focus:ring-blue-500 focus:border-blue-500 sm:text-sm #{if @changeset.errors[:slug], do: "border-red-300", else: "border-gray-300"}"}
                placeholder="acme-corp"
              />
            </div>
            <p class="mt-2 text-sm text-gray-500">
              Only lowercase letters, numbers, and hyphens allowed.
            </p>
            <%= case @changeset.errors[:slug] do %>
              <% nil -> %>
              <% [] -> %>
              <% errors when is_list(errors) -> %>
                <%= for {msg, _opts} <- errors do %>
                  <p class="mt-1 text-sm text-red-600"><%= msg %></p>
                <% end %>
              <% error -> %>
                <p class="mt-1 text-sm text-red-600"><%= elem(error, 0) %></p>
            <% end %>
          </div>

          <div>
            <label for="tenant_description" class="block text-sm font-medium text-gray-700">
              Description (optional)
            </label>
            <textarea
              id="tenant_description"
              name="tenant[description]"
              rows="3"
              class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
              placeholder="Brief description of your organization..."
            ><%= Phoenix.HTML.Form.input_value(to_form(@changeset), :description) %></textarea>
          </div>

          <div class="bg-gray-50 p-4 rounded-md">
            <h3 class="text-sm font-medium text-gray-900 mb-3">Default Chat Settings</h3>
            
            <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
              <div>
                <label for="tenant_default_model" class="block text-sm font-medium text-gray-700">
                  Default Model
                </label>
                <select
                  id="tenant_default_model"
                  name="tenant[default_model]"
                  class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
                >
                  <%= Phoenix.HTML.Form.options_for_select([
                    {"GPT-3.5 Turbo", "gpt-3.5-turbo"},
                    {"GPT-4", "gpt-4"},
                    {"GPT-4 Turbo", "gpt-4-turbo"},
                    {"Claude 3 Sonnet", "claude-3-sonnet"},
                    {"Claude 3 Opus", "claude-3-opus"}
                  ], Phoenix.HTML.Form.input_value(to_form(@changeset), :default_model) || "gpt-3.5-turbo") %>
                </select>
              </div>

              <div>
                <label for="tenant_max_tokens" class="block text-sm font-medium text-gray-700">
                  Max Tokens
                </label>
                <input
                  id="tenant_max_tokens"
                  name="tenant[max_tokens]"
                  type="number"
                  value={Phoenix.HTML.Form.input_value(to_form(@changeset), :max_tokens) || "1000"}
                  min="100"
                  max="8000"
                  class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
                />
              </div>

              <div>
                <label for="tenant_temperature" class="block text-sm font-medium text-gray-700">
                  Temperature
                </label>
                <input
                  id="tenant_temperature"
                  name="tenant[temperature]"
                  type="number"
                  step="0.1"
                  value={Phoenix.HTML.Form.input_value(to_form(@changeset), :temperature) || "0.7"}
                  min="0"
                  max="2"
                  class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
                />
              </div>

              <div class="flex items-center">
                <input
                  id="tenant_allow_model_selection"
                  name="tenant[allow_model_selection]"
                  type="checkbox"
                  checked
                  class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded"
                />
                <label for="tenant_allow_model_selection" class="ml-2 block text-sm text-gray-900">
                  Allow model selection
                </label>
              </div>
            </div>
          </div>

          <div class="flex justify-end space-x-3">
            <a
              href="/tenants"
              class="inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
            >
              Cancel
            </a>
            <button
              type="submit"
              class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
            >
              Create Organization
            </button>
          </div>
        </.form>
      </div>
    </div>
  </div>
</div>
