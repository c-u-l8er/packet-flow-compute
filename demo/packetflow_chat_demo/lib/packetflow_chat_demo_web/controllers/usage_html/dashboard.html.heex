<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header with Navigation -->
    <div class="sm:flex sm:items-center sm:justify-between">
      <div class="sm:flex-auto">
        <nav class="flex space-x-8 mb-4">
          <a href={~p"/#{@tenant.slug}/analytics"} 
             class="inline-flex items-center px-1 pt-1 border-b-2 border-transparent text-sm font-medium text-gray-500 hover:text-gray-700 hover:border-gray-300">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
            </svg>
            Chat Analytics
          </a>
          <a href={~p"/#{@tenant.slug}/usage"} 
             class="inline-flex items-center px-1 pt-1 border-b-2 border-blue-500 text-sm font-medium text-blue-600">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            AI Usage & Costs
          </a>
          <a href={~p"/#{@tenant.slug}/settings"} 
             class="inline-flex items-center px-1 pt-1 border-b-2 border-transparent text-sm font-medium text-gray-500 hover:text-gray-700 hover:border-gray-300">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            Settings
          </a>
        </nav>
        <h1 class="text-2xl font-bold text-gray-900">AI Usage Dashboard</h1>
        <p class="mt-2 text-sm text-gray-700">
          Monitor AI usage and costs for <%= @tenant.name %>
        </p>
      </div>
      <div class="mt-4 sm:mt-0 sm:ml-16 sm:flex-none space-x-3">
        <a
          href={~p"/#{@tenant.slug}/usage/export?start_date=#{Date.add(@current_date, -30) |> Date.to_iso8601()}&end_date=#{@current_date |> Date.to_iso8601()}"}
          class="inline-flex items-center justify-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 shadow-sm hover:bg-gray-50"
        >
          Export CSV
        </a>
        <a
          href={~p"/#{@tenant.slug}/chat"}
          class="inline-flex items-center justify-center rounded-md border border-transparent bg-blue-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-blue-700"
        >
          Back to Chat
        </a>
      </div>
    </div>

    <!-- Cross-reference to Analytics -->
    <div class="mt-8">
      <div class="bg-gradient-to-r from-green-50 to-emerald-50 rounded-lg p-6 border border-green-200">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <svg class="h-8 w-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
            </svg>
          </div>
          <div class="ml-4 flex-1">
            <h3 class="text-lg font-medium text-green-900">Chat Analytics Available</h3>
            <p class="mt-1 text-sm text-green-700">
              Get insights into chat patterns, user engagement, session trends, and activity analytics. 
              Understand how your team uses AI and discover usage patterns.
            </p>
          </div>
          <div class="ml-4 flex-shrink-0">
            <a href={~p"/#{@tenant.slug}/analytics"} 
               class="inline-flex items-center px-4 py-2 border border-green-300 text-sm font-medium rounded-md text-green-700 bg-white hover:bg-green-50">
              View Chat Analytics â†’
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- Enhanced Stats Overview -->
    <div class="mt-8 grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-4 xl:grid-cols-6">
      <!-- Total Requests -->
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="h-6 w-6 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
              </svg>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Total Requests</dt>
                <dd class="text-lg font-medium text-gray-900"><%= format_number(@stats.total.total_requests || 0) %></dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <!-- Total Tokens -->
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="h-6 w-6 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Total Tokens</dt>
                <dd class="text-lg font-medium text-gray-900"><%= format_number(@stats.total.total_tokens || 0) %></dd>
                <dd class="text-xs text-gray-500">Avg: <%= @stats.avg_tokens_per_request %>/req</dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <!-- Total Cost -->
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="h-6 w-6 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
              </svg>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Total Cost</dt>
                <dd class="text-lg font-medium text-gray-900">$<%= :erlang.float_to_binary((@stats.total.total_cost_cents || 0) / 100, decimals: 2) %></dd>
                <dd class="text-xs text-gray-500">Avg: $<%= @stats.avg_cost_per_request %>/req</dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <!-- Success Rate -->
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="h-6 w-6 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Success Rate</dt>
                <dd class="text-lg font-medium text-gray-900"><%= @stats.success_rate %>%</dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <!-- Prompt Tokens -->
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="h-6 w-6 text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
              </svg>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Prompt Tokens</dt>
                <dd class="text-lg font-medium text-gray-900"><%= format_number(@stats.token_efficiency.prompt_tokens) %></dd>
                <dd class="text-xs text-gray-500"><%= @stats.token_efficiency.prompt_cost_ratio %>% of cost</dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <!-- Completion Tokens -->
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="h-6 w-6 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
              </svg>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Output Tokens</dt>
                <dd class="text-lg font-medium text-gray-900"><%= format_number(@stats.token_efficiency.completion_tokens) %></dd>
                <dd class="text-xs text-gray-500"><%= Float.round(100 - @stats.token_efficiency.prompt_cost_ratio, 1) %>% of cost</dd>
              </dl>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Model Usage Breakdown -->
    <%= if length(@stats.model_breakdown) > 0 do %>
      <div class="mt-8">
        <div class="flex items-center justify-between mb-4">
          <h3 class="text-lg leading-6 font-medium text-gray-900">Model Usage Breakdown</h3>
          <a href={~p"/#{@tenant.slug}/analytics"} class="text-sm text-blue-600 hover:text-blue-800">
            View chat patterns â†’
          </a>
        </div>
        <div class="bg-white shadow overflow-hidden sm:rounded-md">
          <ul class="divide-y divide-gray-200">
            <%= for model_stat <- @stats.model_breakdown do %>
              <li class="px-6 py-4">
                <div class="flex items-center justify-between">
                  <div class="flex items-center">
                    <div class="flex-shrink-0">
                      <div class="h-10 w-10 bg-gradient-to-r from-purple-400 to-pink-400 rounded-lg flex items-center justify-center">
                        <span class="text-sm font-medium text-white">GPT</span>
                      </div>
                    </div>
                    <div class="ml-4">
                      <div class="text-sm font-medium text-gray-900">
                        <%= model_stat.model %>
                      </div>
                      <div class="text-sm text-gray-500">
                        <%= format_number(model_stat.requests) %> requests â€¢ <%= format_number(model_stat.tokens) %> tokens
                      </div>
                    </div>
                  </div>
                  <div class="flex items-center space-x-6">
                    <div class="text-sm text-gray-500">
                      Avg: <%= Float.round(model_stat.tokens / max(model_stat.requests, 1), 1) %> tokens/req
                    </div>
                    <div class="text-sm font-medium text-gray-900">
                      $<%= :erlang.float_to_binary(model_stat.cost_cents / 100, decimals: 2) %>
                    </div>
                  </div>
                </div>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    <% end %>

    <!-- Daily Usage Trend (Last 30 Days) -->
    <%= if length(@stats.daily_usage) > 0 do %>
      <div class="mt-8">
        <div class="flex items-center justify-between mb-4">
          <h3 class="text-lg leading-6 font-medium text-gray-900">Daily Usage Trend (Last 30 Days)</h3>
          <a href={~p"/#{@tenant.slug}/analytics"} class="text-sm text-blue-600 hover:text-blue-800">
            View user activity â†’
          </a>
        </div>
        <div class="bg-white shadow rounded-lg p-6">
          <div class="grid grid-cols-1 gap-4">
            <!-- Simple table view for daily usage -->
            <div class="overflow-x-auto">
              <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                  <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Requests</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tokens</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Cost</th>
                  </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                  <%= for daily_stat <- Enum.take(@stats.daily_usage, -10) do %>
                    <tr class="hover:bg-gray-50">
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                        <%= Date.to_string(daily_stat.date) %>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                        <%= format_number(daily_stat.requests) %>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                        <%= format_number(daily_stat.tokens) %>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                        $<%= :erlang.float_to_binary(daily_stat.cost_cents / 100, decimals: 2) %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Monthly Summaries -->
    <%= if length(@monthly_summaries) > 0 do %>
      <div class="mt-8">
        <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Monthly Usage History</h3>
        <div class="bg-white shadow overflow-hidden sm:rounded-md">
          <ul class="divide-y divide-gray-200">
            <%= for summary <- @monthly_summaries do %>
              <li class="px-6 py-4">
                <div class="flex items-center justify-between">
                  <div class="flex items-center">
                    <div class="flex-shrink-0">
                      <div class="h-10 w-10 bg-blue-100 rounded-lg flex items-center justify-center">
                        <span class="text-sm font-medium text-blue-600"><%= summary.month %></span>
                      </div>
                    </div>
                    <div class="ml-4">
                      <div class="text-sm font-medium text-gray-900">
                        <%= PacketflowChatDemo.Usage.MonthlyUsageSummary.month_name(summary) %> <%= summary.year %>
                      </div>
                      <div class="text-sm text-gray-500">
                        <%= summary.total_requests %> requests â€¢ <%= format_number(summary.openai_total_tokens + summary.anthropic_total_tokens) %> tokens
                      </div>
                    </div>
                  </div>
                  <div class="flex items-center space-x-6">
                    <div class="text-sm text-gray-500">
                      OpenAI: $<%= :erlang.float_to_binary(summary.openai_total_cost_cents / 100, decimals: 2) %>
                    </div>
                    <div class="text-sm text-gray-500">
                      Anthropic: $<%= :erlang.float_to_binary(summary.anthropic_total_cost_cents / 100, decimals: 2) %>
                    </div>
                    <div class="text-sm font-medium text-gray-900">
                      Total: $<%= :erlang.float_to_binary(PacketflowChatDemo.Usage.MonthlyUsageSummary.total_cost_dollars(summary), decimals: 2) %>
                    </div>
                  </div>
                </div>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    <% end %>

    <!-- Recent Usage -->
    <%= if length(@current_month_usage) > 0 do %>
      <div class="mt-8">
        <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Recent Usage (Current Month)</h3>
        <div class="bg-white shadow overflow-hidden sm:rounded-md">
          <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gray-50">
                <tr>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Model</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tokens</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Cost</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
                <%= for record <- @current_month_usage do %>
                  <tr class="hover:bg-gray-50">
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                      <%= DateTime.to_date(record.inserted_at) |> Date.to_string() %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <div class="flex items-center">
                        <span class="text-sm font-medium text-gray-900"><%= record.model %></span>
                        <span class="ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                          <%= record.provider %>
                        </span>
                      </div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                      <%= format_number(record.total_tokens) %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                      $<%= :erlang.float_to_binary(record.total_cost_cents / 100, decimals: 4) %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <%= if record.success do %>
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                          Success
                        </span>
                      <% else %>
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                          Failed
                        </span>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    <% else %>
      <div class="mt-8 text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No usage data</h3>
        <p class="mt-1 text-sm text-gray-500">
          Start chatting to see usage statistics here.
        </p>
      </div>
    <% end %>
  </div>
</div>
